extends layout

block content
  h1= title
  - let items = results
  p Search results echo
  p 
  div(class="container-fluid")
        div(class="row")
            each v,index in items 
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.model}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.frequency}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }